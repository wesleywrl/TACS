<% include ../partials/header %>
<% include ../partials/navbar %>

<div id="main">
  <div class="inner">
    <h1>Usuários</h1>

    <!-- Table -->
    <section>

      <div class="row">
        <div class="col-6">
        </div>
        <div class="col-3"></div>
        <div class="col-2">
          <a href="/usuario/cadastrar" class="button default small">Cadastrar Usuário</a>
        </div>
      </div>

      <%- message %>
      <hr>

      <div class="table-wrapper">
        <table>
          <thead>
            <tr>
              <th>ID</th>
              <th>Nome</th>
              <th>Email</th>
            </tr>
          </thead>
          <tbody>
            <% usuarios.forEach(function(usuario) { %>
            <tr>
              <td> <%= usuario.id %> </td>
              <td> <%= usuario.nome %> </td>
              <td> <%= usuario.email %> </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </section>

  </div>
</div>

<% include ../partials/footer %>